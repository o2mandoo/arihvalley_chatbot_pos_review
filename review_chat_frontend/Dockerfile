FROM node:20-alpine AS deps
WORKDIR /app
COPY review_chat_frontend/package.json ./package.json
COPY review_chat_frontend/package-lock.json ./package-lock.json
RUN npm ci

FROM node:20-alpine AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY review_chat_frontend .
RUN npm run build

FROM node:20-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
COPY --from=builder /app .
EXPOSE 3000
CMD ["npm", "run", "start"]
